.panel.panel-info
  .panel-heading
    %h3.panel-title
      = @question.body
  .panel-body
    .profile-padding
      How many time the question was answered :
      = @question.answer_counter
    .profile-padding
      The percentage of correct answer :
      = @presenter.present_correct_ratio
    .profile-padding
      The ratio like/dislike of the question :
      = @presenter.present_like_ratio
%table.table.table-striped
  %thead
    %tr.info
      %th User name
      %th Correct ?
      %th Answers given
    - @presenter.last_answers(10).each do |answer|
      %tr
        %td= @presenter.user_name(answer)
        %td= answer.is_correct
        %td= @presenter.present_answers(answer)
