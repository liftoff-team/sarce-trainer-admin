%h2.text-center Modifier Question
= @question.errors.full_messages.to_sentence if @question.errors.any?
= form_for @question, url: {action: 'update'} do |f|
  .field
    %h4= f.label 'Intitulé'
    = f.text_field :body, class: 'form-control', id: 'Intitulé', required: true, autofocus: true
  .field
    %h5
      =f.label 'Réponse 1'
      %input{id: 'checkbox_1', name: 'question[correct_answers][]', type: 'checkbox', value: 0, checked: @presenter.answer_correct?(@question.answers[0])}
      %input{id: 'text_1', name: 'question[answers][]', type:'text', required: true, value: "#{@question.answers[0]}"}
    %h5
      =f.label 'Réponse 2'
      %input{id: 'checkbox_2', name: 'question[correct_answers][]', type: 'checkbox', value: 1, checked: @presenter.answer_correct?(@question.answers[1])}
      %input{id: 'text_2', name: 'question[answers][]', type:'text', required: true, value: "#{@question.answers[1]}"}
    %h5
      =f.label 'Réponse 3'
      %input{id: 'checkbox_3', name: 'question[correct_answers][]', type: 'checkbox', value: 2, checked: @presenter.answer_correct?(@question.answers[2])}
      %input{id: 'text_3', name: 'question[answers][]', type:'text', value: "#{@question.answers[2]}"}
    %h5
      =f.label 'Réponse 4'
      %input{id: 'checkbox_4', name: 'question[correct_answers][]', type: 'checkbox', value: 3, checked: @presenter.answer_correct?(@question.answers[3])}
      %input{id: 'text_4', name: 'question[answers][]', type:'text', value: "#{@question.answers[3]}"}
  .field
    %h4= f.label 'Explication'
    = f.text_field :explanation, class: 'form-control', required: true, id: 'Explication'
  .field
    %h4= f.label 'Documentation'
    = f.number_field :documentation_id, class: 'form-control', required: true, id: 'Documentation'
  .actions
    = f.submit 'Modifier', class: 'btn btn-primary'
