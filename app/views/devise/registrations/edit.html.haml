%h2.text-primary Modifier mon profil
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render partial:  'form', locals: { f: f }
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    %h4= f.label :password, class: 'label label-info'
    %i (leave blank if you don't want to change it)
    = f.password_field :password, class: 'form-control', autocomplete: 'off'
  .field
    %h4= f.label :password_confirmation, class: 'label label-info'
    = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'
  .field
    %h4= f.label :current_password, class: 'label label-info'
    %i (we need your current password to confirm your changes)
    = f.password_field :current_password, class: 'form-control', autocomplete: 'off'
  .actions
    = f.submit 'Mettre à jour', class: 'btn btn-primary'
%p
  #{button_to 'Supprimer mon compte', registration_path(resource_name), class: 'btn btn-danger', data: { confirm: 'Êtes-vous sûr ?' }, method: :delete}
= link_to 'Retour', :back
